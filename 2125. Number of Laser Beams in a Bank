class Solution {
    public int numberOfBeams(String[] bank) {
        int previousSecurityDevices = 0;
        int result = 0;

        for (String s : bank) {
            int currentSecurityDevices = 0;
            for (char c : s.toCharArray()) {
                if (c == '1') {
                    currentSecurityDevices += 1;
                }
            }
            if (currentSecurityDevices > 0) {
                result += previousSecurityDevices * currentSecurityDevices;
                previousSecurityDevices = currentSecurityDevices;
            }
        }
        return result;
    }
}
